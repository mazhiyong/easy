<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dp_15" android:bottomRightRadius="@dimen/dp_15" android:topLeftRadius="@dimen/dp_15" android:topRightRadius="@dimen/dp_15" />

            <solid android:color="@color/gray8" />

            <stroke android:width="3px" android:color="@color/gray8" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dp_15" android:bottomRightRadius="@dimen/dp_15" android:topLeftRadius="@dimen/dp_15" android:topRightRadius="@dimen/dp_15" />

            <solid android:color="@color/white" />

            <stroke android:width="3px" android:color="@color/gray8" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dp_15" android:bottomRightRadius="@dimen/dp_15" android:topLeftRadius="@dimen/dp_15" android:topRightRadius="@dimen/dp_15" />

            <solid android:color="@color/type_bg2" />

            <stroke android:width="3px" android:color="@color/divide_line" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dp_15" android:bottomRightRadius="@dimen/dp_15" android:topLeftRadius="@dimen/dp_15" android:topRightRadius="@dimen/dp_15" />

            <solid android:color="@color/white" />

            <stroke android:width="3px" android:color="@color/gray8" />
        </shape>
    </item>
    <item >
        <shape>
            <corners android:bottomLeftRadius="@dimen/dp_15" android:bottomRightRadius="@dimen/dp_15" android:topLeftRadius="@dimen/dp_15" android:topRightRadius="@dimen/dp_15" />

            <solid android:color="@color/white" />

            <stroke android:width="3px" android:color="@color/gray8" />
        </shape>
    </item>

</selector>