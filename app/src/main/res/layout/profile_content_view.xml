<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/body_bg"

              android:orientation="vertical">
   <androidx.cardview.widget.CardView
       android:layout_margin="@dimen/dp_10"
       app:cardCornerRadius="@dimen/dp_10"
       app:cardElevation="0dp"
       android:clickable="true"
       app:cardPreventCornerOverlap="false"
       android:foreground="?android:attr/selectableItemBackground"
       app:cardBackgroundColor="@color/white"
       android:focusable="false"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:id="@+id/renZhengLay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               app:cardPreventCornerOverlap="false"
               android:foreground="?android:attr/selectableItemBackground"
               app:cardBackgroundColor="@color/white"
               android:background="@color/white"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_renzheng"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:text="实名认证" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/bankCardLay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_bank"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:text="银行卡信息" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:id="@+id/yaoQingLay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_yaoqing"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:text="邀请奖励" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>



           <androidx.cardview.widget.CardView
               android:id="@+id/mymoney_borrow"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@color/transparent"
                       android:src="@drawable/mymoney_borrow"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black"
                       android:text="@string/my_money_borrow" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/divide_hight"
               android:visibility="gone"
               android:background="@color/divide_line"/>
           <androidx.cardview.widget.CardView
               android:id="@+id/trade_Lay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_trade"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:text="交易记录" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>



           <androidx.cardview.widget.CardView
               android:id="@+id/account_Lay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_account"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:text="账户设置" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:id="@+id/help_Lay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_help"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:text="帮助中心" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:id="@+id/same_people_lay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:visibility="gone"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@color/transparent"
                       android:src="@drawable/person_same_people"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black"
                       android:text="帮助中心" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/message_Lay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_meeage"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:text="站内信息" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:id="@+id/notice_Lay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:focusable="false">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_15"
                   android:paddingTop="@dimen/item_padding"
                   android:paddingBottom="@dimen/item_padding"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >

                   <ImageView
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"
                       android:background="@drawable/person_notice"
                       android:scaleType="centerInside"
                       />

                   <TextView
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:gravity="left|center_vertical"
                       android:src="@drawable/android_list_idex"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@color/black33"
                       android:text="平台公告" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_list_idex"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>


       </LinearLayout>
   </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:visibility="gone"
        android:background="@color/divide_line"/>


</LinearLayout>