<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_15"
    app:cardElevation="@dimen/dp_0"
    app:cardPreventCornerOverlap="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textStyle="bold"
            android:drawableLeft="@drawable/tip_icon"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:text="aaa"
            android:textColor="@color/black99"
            android:textSize="@dimen/sp_14" />


        <LinearLayout
            android:id="@+id/bottom_lay"
            android:layout_below="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:background="@drawable/corners_gray"
                android:text="取消"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black99" />


            <TextView
                android:id="@+id/confirm"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corners_red"
                android:text="@string/but_sure"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/font_c" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>