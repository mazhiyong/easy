<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/body_bg">

    <LinearLayout
        android:id="@+id/title_bar_view"
        style="@style/title_bar_style"

        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/left_back_lay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:contentDescription="@null"
                    />

                <TextView
                    android:id="@+id/back_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black" />
            </LinearLayout>
            <TextView
                android:text="策略"
                android:id="@+id/title_text"
                style="@style/title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_140"
                android:textColor="@color/black33"
                android:singleLine="true"
                />


            <LinearLayout
                android:id="@+id/right_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/right_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/right_img"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_10" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:layout_alignParentBottom="true"
                android:background="@color/divide_line" />
        </RelativeLayout>


    </LinearLayout>


    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        app:xTabTextColor="@color/black33"
        app:xTabTextSize="@dimen/sp_14"
        app:xTabIndicatorColor="@color/font_c"
        app:xTabDividerWidth="@dimen/dp_0"
        app:xTabDividerColor="@color/white"
        app:xTabDividerWidthWidthText="true"
        app:xTabSelectedTextColor="@color/black33" />

    <LinearLayout
        android:id="@+id/peiziLay"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:focusable="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_3"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="风险保证金"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:inputType="number"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="最少200,最多200万,百的整数倍"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/black99"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="申请额度"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="填写保证金后选择"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/black99"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="操盘时间"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:text="一个交易日"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_list_idex"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="总操盘资金"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:text="0.00元"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="亏损警戒线"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:text="0.00元"
                        android:textColor="@color/font_c"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="亏损平仓线"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:text="0.00元"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="利息"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:text="0.00元/交易日"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="交易时间"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:text="下个交易日"
                        android:textColor="@color/black33"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_list_idex"
                        />
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tipTv"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:text="提示"
            android:lineSpacingExtra="@dimen/sp_10"
            android:textColor="@color/black99"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/shenQingTv"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_16"
            android:text="立即申请"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_8"
            android:background="@drawable/btn_next"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tiyanLay"
        android:visibility="gone"
        android:background="@drawable/tiyan_bac_max"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="@dimen/dp_15"
            android:textSize="@dimen/sp_32"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="我们出资 让你体验"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_margin="@dimen/dp_15"
             android:background="@drawable/yiyan_bac_small"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:orientation="horizontal"
                 android:padding="@dimen/dp_5"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="@dimen/dp_10"
                 android:layout_marginLeft="@dimen/dp_35"
                 android:layout_marginRight="@dimen/dp_35"
                 android:background="@drawable/background_white_cricle"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:src="@drawable/lingdang"
                     android:layout_gravity="center_vertical"
                     android:layout_width="@dimen/dp_20"
                     android:layout_height="@dimen/dp_20"/>
                 <TextView
                     android:textSize="@dimen/sp_14"
                     android:textStyle="bold"
                     android:layout_gravity="center_vertical"
                     android:textColor="@color/font_c"
                     android:text="每个新用户只有一次体验机会"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

             </LinearLayout>
             <ImageView
                 android:src="@drawable/pathdown"
                 android:layout_margin="@dimen/dp_10"
                 android:layout_gravity="center_horizontal"
                 android:layout_width="@dimen/dp_20"
                 android:layout_height="@dimen/dp_20"/>
             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:focusable="false"
                 android:layout_marginLeft="@dimen/dp_10"
                 android:layout_marginRight="@dimen/dp_10"
                 android:foreground="?android:attr/selectableItemBackground"
                 app:cardBackgroundColor="@color/white"
                 app:cardCornerRadius="@dimen/dp_8"
                 app:cardElevation="@dimen/dp_3"
                 app:cardPreventCornerOverlap="false">
                 <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="match_parent"
                         android:gravity="center_horizontal"
                         android:layout_marginTop="@dimen/dp_15"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="将军 配资出5000元"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black"
                             android:layout_height="wrap_content"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="（完全免费）"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black99"
                             android:layout_height="wrap_content"/>

                     </LinearLayout>
                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="match_parent"
                         android:gravity="center_horizontal"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="您交100元体验费"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black"
                             android:layout_height="wrap_content"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="（体验结束后全额退还）"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black99"
                             android:layout_height="wrap_content"/>

                     </LinearLayout>

                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="match_parent"
                         android:gravity="center_horizontal"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="总共5000元"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black"
                             android:layout_height="wrap_content"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="（由您操盘）"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black99"
                             android:layout_height="wrap_content"/>

                     </LinearLayout>

                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="match_parent"
                         android:gravity="center_horizontal"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_marginBottom="@dimen/dp_15"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="交易2天"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black"
                             android:layout_height="wrap_content"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                             android:gravity="center_vertical"
                             android:textSize="@dimen/sp_14"
                             android:text="（第2个交易日14:30前必须卖出股票）"
                             android:lineSpacingExtra="@dimen/sp_10"
                             android:textColor="@color/black99"
                             android:layout_height="wrap_content"/>

                     </LinearLayout>

                 </LinearLayout>
             </androidx.cardview.widget.CardView>
             <TextView
                 android:layout_marginTop="@dimen/dp_15"
                 android:textSize="@dimen/sp_20"
                 android:textColor="@color/font_c"
                 android:textStyle="bold"
                 android:layout_gravity="center_horizontal"
                 android:text="盈利全归您 超额亏损算我们的！"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
             <TextView
                 android:background="@drawable/corners_yellow_shape"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:layout_marginLeft="@dimen/dp_10"
                 android:layout_marginRight="@dimen/dp_10"
                 android:layout_marginBottom="@dimen/dp_15"
                 android:padding="@dimen/dp_5"
                 android:layout_marginTop="@dimen/dp_10"
                 android:textColor="@color/font_c"
                 android:textSize="@dimen/sp_13"
                 android:lineSpacingExtra="@dimen/sp_6"
                 android:text="盈利不能提现  只能当管理费使用\n只需支付100元就可以获得5000元体验操盘账号"
                 android:layout_height="wrap_content"/>
         </LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_16"
            android:text="立即体验"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_8"
            android:background="@drawable/btn_next"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
