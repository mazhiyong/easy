<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:clickable="true"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/dp_10"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_height="wrap_content">
                <TextView
                    android:text="我的邀请码"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/yaoQingCodeTv"
                    android:gravity="right"
                    android:textColor="@color/black33"
                    android:text=""
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/copyTextTv"
                    android:text="复制"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/font_c"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_height="wrap_content">
                <TextView
                    android:text="邀请链接"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/corners_gray2"
                android:layout_marginLeft="@dimen/dp_25"
                android:padding="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/linkTv"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@color/divide_line"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/copyLinkTv"
                    android:gravity="right"
                    android:textColor="@color/font_c"
                    android:text="复制链接"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/typeTv"
                android:layout_margin="@dimen/dp_10"
                android:text="邀请二维码"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black33"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/erWeiCodeIv"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:enabled="false"
        android:visibility="gone"
        android:id="@+id/but_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/but_height"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/btn_next"
        android:text="确定提交"
        android:textColor="@color/btn_login_text"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/tipTv"
        android:visibility="gone"
        android:layout_margin="@dimen/dp_15"
        android:text=""
        android:textColor="@color/black33"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_0"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/yaoqingRecordLay"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content">
                <TextView
                    android:text="邀请记录"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/yaoqingMountTv"
                    android:text="0.00"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/font_c"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_list_idex"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/jiangliRecordLay"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="wrap_content">
                <TextView
                    android:text="奖励记录"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/jiangliMountTv"
                    android:text="0.00"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/font_c"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_list_idex"
                    />

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>